<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>hei.devweb.controllers.HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Blog</servlet-name>
    <servlet-class>hei.devweb.controllers.BlogServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Article</servlet-name>
    <servlet-class>hei.devweb.controllers.ArticleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Admin</servlet-name>
    <servlet-class>hei.devweb.controllers.AdminServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AjouterCommentaire</servlet-name>
    <servlet-class>hei.devweb.controllers.AjouterCommentaireServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AjouterArticle</servlet-name>
    <servlet-class>hei.devweb.controllers.AjouterArticleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SupprimerArticle</servlet-name>
    <servlet-class>hei.devweb.controllers.SupprimerArticleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Blog</servlet-name>
    <url-pattern>/blog</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Article</servlet-name>
    <url-pattern>/article</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AjouterCommentaire</servlet-name>
    <url-pattern>/ajoutercommentaire</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AjouterArticle</servlet-name>
    <url-pattern>/ajouterarticle</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SupprimerArticle</servlet-name>
    <url-pattern>/supprimerarticle</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>
</web-app>